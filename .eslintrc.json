{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "env": {
    "browser": true
  },
  "plugins": [
    "@typescript-eslint",
    "ava"
  ],
  "extends": [
    "@octetstream",
    "airbnb-typescript",
    "plugin:ava/recommended"
  ],
  "rules": {
    "no-void": 0,
    "func-names": 0,

    "max-len": ["error", {
      "code": 80,
      "ignoreComments": true
    }],
    "import/no-unresolved": ["error", {
      "ignore": ["dinky.js"]
    }],
    "operator-linebreak": ["error", "after", {
      "overrides": {
        "+": "ignore",
        "?": "before",
        ":": "before"
      }
    }]
  }
}
